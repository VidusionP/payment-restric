  "components/halothemes/halo-product-tab-by-category": "<style>.loadingOverlay:before { top: 50% !important;}</style>\r\n<div class=\"halo-block halo-block-product halo-block-product-tabs padding-top-30 padding-bottom-50\">\r\n    <div class=\"container\">\r\n        <div class=\"halo-block-header\">\r\n            <h3 class=\"title\">{{title}}</h3>\r\n        </div>\r\n        <div class=\"productCarousel-tabs\">\r\n\r\n            <div class=\"tabs-contents\">\r\n                {{#each categories}}\r\n                <h2 class=\"tab-content-title\"  >{{name}}</h2>\r\n                    {{#if @index '==' 0}}\r\n                        <div class=\"tab-content is-active\" style=\"position: relative; min-height: 200px;\" data-name=\"{{name}}\" id=\"category_{{id}}\" role=\"tabpanel\" aria-hidden=\"true\" data-tab-category-id=\"{{id}}\" data-tab-category-url=\"{{concat url ../../data-sort-tab}}\">\r\n                            <div style=\"top: unset;\" class=\"loadingOverlay\"></div>\r\n                            <div class=\"productCarousel\"></div>\r\n                        </div>\r\n                    {{else}}\r\n                        <div class=\"tab-content is-active\" style=\"position: relative; min-height: 200px;\" data-name=\"{{name}}\" id=\"category_{{id}}\" role=\"tabpanel\" aria-hidden=\"false\" data-tab-category-id=\"{{id}}\" data-tab-category-url=\"{{concat url ../../data-sort-tab}}\">\r\n                            <div style=\"top: unset;\" class=\"loadingOverlay\"></div>\r\n                            <div class=\"productCarousel\"></div>\r\n                        </div>\r\n                    {{/if}}\r\n                {{/each}}\r\n            </div>\r\n        </div>\r\n    </div>\r\n</div>\r\n{{{region name=\"home_below_products_tab_by_category\"}}}\r\n"
